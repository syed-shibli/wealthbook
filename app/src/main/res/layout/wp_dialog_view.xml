<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/activity_horizontal_margin"
    app:cardPreventCornerOverlap="true">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_x_normal"
            tools:text="Title" />


        <TextView
            android:id="@+id/dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/line_spacing_10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_x_normal"
            tools:text="Here you can set your text message so user can be seen" />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dialog_body"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/horizontal_line"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/txt_xx_normal"
                tools:text="No" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/txt_xx_normal"
                tools:text="Yes" />

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>
