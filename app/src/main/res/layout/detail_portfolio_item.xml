<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_smallest">

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txv_equity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/padding_x_smallest"
            android:paddingStart="@dimen/padding_x_smallest"
            android:text="@string/txt_default"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txv_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_x_smallest"
            android:paddingStart="@dimen/padding_x_smallest"
            android:text="@string/txt_default" />

        <TextView
            android:id="@+id/txv_eod_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_x_smallest"
            android:paddingStart="@dimen/padding_x_smallest"
            android:text="@string/txt_default" />

        <TextView
            android:id="@+id/txv_eod_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_x_smallest"
            android:paddingStart="@dimen/padding_x_smallest"
            android:text="@string/txt_default" />

        <TextView
            android:id="@+id/txv_percent_assets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_x_smallest"
            android:paddingStart="@dimen/padding_x_smallest"
            android:text="@string/txt_default" />

        <TextView
            android:id="@+id/txv_gain_loss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_x_smallest"
            android:paddingStart="@dimen/padding_x_smallest"
            android:text="@string/txt_default" />
    </LinearLayout>

    <TextView
        android:id="@+id/txv_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row"
        android:layout_marginTop="@dimen/margin_normal"
        android:paddingEnd="@dimen/padding_x_smallest"
        android:paddingStart="@dimen/padding_x_smallest"
        android:text="@string/txt_symbol" />
</RelativeLayout>