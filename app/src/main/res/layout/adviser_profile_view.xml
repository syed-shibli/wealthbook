<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advisor_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAdviserProfileView"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_adviser_logo"
        android:layout_width="@dimen/adviser_logo_width"
        android:layout_height="@dimen/adviser_logo_height"
        android:scaleType="fitCenter"
        android:src="@mipmap/advisor_placeholder" />

    <TextView
        android:id="@+id/txv_adviser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="italic"
        android:layout_toEndOf="@+id/img_adviser_logo"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_x_normal"
        tools:text="Adviser name" />
</RelativeLayout>