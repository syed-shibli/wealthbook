<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAdviserProfileView"
    android:gravity="center"
    android:padding="@dimen/padding_smallest">

    <LinearLayout
        android:id="@+id/adviser_logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_adviser_logo"
            android:layout_width="@dimen/adviser_logo_width"
            android:layout_height="@dimen/adviser_logo_height"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txv_adviser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/txv_adviser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_toEndOf="@id/adviser_logo_container"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_normal"
        tools:text="Adviser name" />
</RelativeLayout>